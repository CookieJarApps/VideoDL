<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:key="download"
        android:title="@string/download_location_title"
        android:icon="@drawable/ic_folder"
        app:iconSpaceReserved="true" />

    <Preference
        android:key="download_manager"
        android:title="@string/downloader"
        android:icon="@drawable/ic_download"
        app:iconSpaceReserved="true" />

    <Preference
        android:key="download_split"
        android:title="@string/download_split"
        android:icon="@drawable/ic_pie_chart"
        app:iconSpaceReserved="true" />

    <Preference
        android:summary="https://vcs.cookiejarapps.com/CookieJarApps/VideoDL/issues"
        android:title="@string/report_an_issue"
        android:icon="@drawable/ic_baseline_error">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://vcs.cookiejarapps.com/CookieJarApps/VideoDL/issues">
            <extra
                android:name="SOURCE"
                android:value="SELF" />
        </intent>
    </Preference>

</PreferenceScreen>